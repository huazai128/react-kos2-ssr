.bread-box{
  background: #fff;
  width: 100%;
  height: 40px;
  position: relative;
  border-bottom: 2px solid #2f4050;
  .swiper-com{
    width: 40px;
    height: 100%;  
    color: #999;
  }
  .nav-right{
    width: 180px;
    font-size: 14px;
    color: #999;
    .nav-close{
      width: 80px;
      border-left: 1px solid #eee;
      border-right: 1px solid #eee;
      box-sizing: border-box;
    }
    .logout{
      width: 60px;
      box-sizing: border-box;
    }
  }
  .bread-swiper{
    position: relative;
    height: 100%;
    border-left: 1px solid #eee;
    border-right: 1px solid #eee;
    & > div {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: #fafafa;  
      a{
        padding: 0 10px;
        height: 100%;
        background: #eee;
        color: #666;
        font-size: 12px;
        &.active{
          background:#293846;
          color: #fff;
        }
      }
    }
  }
}