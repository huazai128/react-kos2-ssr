.bread-box{
  background: #fff;
  width: 100%;
  height: 40px;
  position: relative;
  border-bottom: 2px solid #2f4050;
  .swiper-com{
    width: 40px;
    height: 100%;  
    color: #999;
  }
  .nav-right{
    width: 180px;
    font-size: 14px;
    color: #999;
    .nav-close{
      width: 80px;
      border-left: 1px solid #eee;
      border-right: 1px solid #eee;
    }
    .logout{
      width: 40px;
    }
  }
  .bread-swiper{
    position: relative;
    height: 100%;
    & > div {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: #fafafa;  
      .swipe-item{
        a{
          padding: 0 10px;
          height: 100%;
          display: block;
          background: #eee;
        }
      }
    }
  }
}