.main-box{
  width: 100%;
  height: 100%;
  padding: 20px 30px;
  box-sizing: border-box;
  background: #fff;
}
.admin-box{
  width: 100%;
  height: 100%;  
  background: #101010;
}

.tabs-box{
  background: #fff;
  height: 40px;
  padding: 0 20px;
  border-bottom: 1px solid #eee;
  h2{
    font-size: 18px;
    color: #333;
    font-weight: 500;
  }
  p{
    font-size: 14px;
    color: #333;
  }
}

.main-content{
  
}

.nav-box{
  width: 220px;
  height: 100%;
  border-right: 1px solid #eee;
  background: #fff;
  box-shadow: 0 4px 30px rgba(0,0,0,1);
  h3{
    font-size: 24px;
    color: #666;
    font-weight: 500;
    padding: 30px 0;
    border-bottom: 1px solid #eee;
  }
  .nav-item{
    a{
      display: block;
      padding: 15px 20px;
      font-size: 14px;
      color: #666;
      border-bottom: 1px solid #eee;
      
    }
  }
}

.bread-box{
  padding: 0 20px 30px;
  background: #fff;
  width: 100%;
  box-sizing: border-box;
  position: relative;
  .bread-swiper{
    overflow-x: scroll;
    overflow-y: hidden;
    height: 100%;
    width: 100%;
    white-space: nowrap;
    .swipe-item{
      display: inline-block;
      padding: 2px 8px;
      a{
        padding: 5px 30px 5px 10px;
        display: block;
        border: 1px solid #eee;
        border-radius: 4px;
        font-size: 14px;
        color: #666;
        &.action{
          background: #1890ff;
          color: #fff;
        }
      }
    }
  }
}
// input 公用样式
.input-box{
  width: 100%;
  height: 32px;
  font-size: 14px;
  border: 1px solid #eee;
  outline: none;
  padding: 0 10px;
}
input::-webkit-input-placeholder, textarea::-webkit-input-placeholder {
  color: #999;
}
input:-moz-placeholder, textarea:-moz-placeholder {
  color: #999;
}


