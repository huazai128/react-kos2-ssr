.nav-box{
  width: 220px;
  height: 100%;
  border-right: 1px solid #eee;
  background: #fff;
  box-shadow: 0 4px 30px rgba(0,0,0,1);
  h3{
    font-size: 24px;
    color: #666;
    font-weight: 500;
    padding: 30px 0;
    border-bottom: 1px solid #eee;
  }
  .nav-item{
    a{
      display: block;
      padding: 15px 20px;
      font-size: 14px;
      color: #666;
      border-bottom: 1px solid #eee;
      
    }
  }
}