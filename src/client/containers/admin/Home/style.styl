.admin-box{
  background: #fff;
  .admin-head{
    border-bottom: 1px solid #eee;
    padding-bottom: 20px;
    .search-group{
      margin-right: 50px;
      .search-lable{
        padding-right: 30px;
      }
      .select{
        width: 200px
      }
    }
  }
  .article-cont{
    position: relative;
    .article-lists{
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      overflow-y: scroll;
      table{
        width: 100%;
        max-height: 100%;
        thead{
          border-bottom: 1px solid #eee;
          th{
            height: 30px;
          }
        }
        tbody{
          tr, td{
            height: 40px;
          }
          .article-btn{
            margin: 0 5px; 
          }
        }
      }
    }
  }
  
  .article-pagination{
    height: 40px;

  }
}